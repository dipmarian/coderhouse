DROP SCHEMA IF EXISTS TORNEOS;
CREATE SCHEMA TORNEOS;
USE TORNEOS;

CREATE TABLE EQUIPOS(
ID_EQUIPO INT (50) ,
NOMBRE VARCHAR (50) ,
PROVINCIA VARCHAR (30),
primary key (ID_EQUIPO),
);


CREATE TABLE JUGADORES(
ID_JUGADOR INT (8),
NOMBRE_Y_APELLIDO VARCHAR (50),
ID_EQUIPO int (50),
NUMERO_DE_CAMISETA INT (100),
GOLES INT (255),
TARJETAS INT (255),
PRIMARY KEY (ID_JUGADOR),
foreign key (ID_EQUIPO) REFERENCES EQUIPOS (ID_EQUIPO))
;
CREATE TABLE FIXTURE_Y_PARTIDOS_DE_LA_FECHA(
ID_CAMPEONATO INT(255),
ID_FECHA INT(50),
ID_PARTIDO INT (50),
EQUIPOS_DEL_PARTIDO VARCHAR (100),
ID_ARBITRO INT (50),
RESULTADO_DEL_PARTIDO VARCHAR (100),
PRIMARY KEY (ID_PARTIDO),
foreign key (ID_CAMPEONATO) references CAMPEONATOS (ID_CAMPEONATO));



CREATE TABLE CAMPEONATOS(
ID_CAMPEONATO INT (255),
NOMBRE VARCHAR (100),
ID_EQUIPO INT (50),
PRIMARY KEY (ID_CAMPEONATO),
foreign key (ID_EQUIPO) REFERENCES EQUIPOS (ID_EQUIPO));

CREATE TABLE ARBITROS (
ID_ARBITRO INT (50),
NOMBRE_Y_APELLIDO VARCHAR (100),
ID_PARTIDO INT (50),
PRIMARY KEY (ID_ARBITRO),
foreign key (ID_PARTIDO) REFERENCES fixture_y_partidos_de_la_fecha (ID_PARTIDO));
